.card
  = link_to board_task_path(task.board_id, task),class: 'link' do
    .card_content
      - if task.eyecatch.attached?
        .card_image
          = image_tag task.eyecatch
      .card-title
        = task.title
      .card_description
        = task.content
      .card_author
        = image_tag task.user.avatar_image, class: "avatar"