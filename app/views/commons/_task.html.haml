.card
  -if user_signed_in?
    .card_actions
      .dropdown
        = image_tag 'card-menu.svg'
        .dropdown-content.mini
          -# = link_to "Edit", edit_board_task_path(task)
          -# = link_to "Delete", board_task_path(task), data: {method: 'delete', confirm: '本当に削除してもよろしいですか？' }
    = link_to board_tasks_path(task),class: 'link' do
      .card_content
        .card-title
          = task.title
        .card_description
          = task.content
        .card_author
          = image_tag task.user.avatar_image, class: "avatar"